<%- include('partial/header'); %>

<div class="container">
	<div class="row justify-content-center">
		<div class="col text-center" style="padding-top: 100px">
			<h1>ABC car repears</h1>
			<div class="card">
				<div class="card-header">repairs</div>
				<div class="card-header">
					<div class="row">
						<div class="col-4">Name</div>
						<div class="col-4">Car</div>
						<div class="col-4">Fee</div>
					</div>
				</div>
				<div class="card-body">
					<% if (repairs) { %> <% repairs.forEach((repair)=>{ %>
					<div class="row">
						<div class="col-4">
							<p><%= repair.custName %></p>
						</div>
						<div class="col-4">
							<p><%= repair.carModel %></p>
						</div>
						<div class="col-4">
							<p><%= repair.fee %></p>
						</div>
					</div>
					<% }); %> <% } %>
				</div>
			</div>
		</div>
    </div>
    <div class="row justify-content-center pt-5">
        <a class="btn btn-primary" href="/form">
            Add User
        </a>
    </div>
</div>

<%- include('partial/footer'); %>
