<%- include("../partials/header") -%>

<div class="container" style="padding-top: 150px">
	<div class="row">
		<h1>Books</h1>
	</div>
	<div class="row mb-3">
		<a href="/createbook" class="btn btn-success ml-auto mr-3">Add book</a>
	</div>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-header text-center">
					<div class="row">
						<div class="col">
							<h4>Title</h4>
						</div>
						<div class="col">
							<h4>Author</h4>
						</div>
						<div class="col">
							<h4>Year</h4>
						</div>
					</div>
				</div>
				<div class="card-body text-center">
					<% books.forEach((book) => { %>
					<div class="row">
						<div class="col">
							<p><%= book.title %></p>
						</div>
						<div class="col">
							<p><%= book.author %></p>
						</div>
						<div class="col">
							<p><%= book.year %></p>
						</div>
					</div>
					<% }); %>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include("../partials/footer") -%>
