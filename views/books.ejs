<%- include("partials/header") -%>

<div class="container" style="padding-top: 150px">
	<div class="row">
		<h1>Books</h1>
	</div>
	<div class="row mb-3">
		<a href="/" class="btn btn-success mr-auto ml-3">Back</a>
		<a href="/createbook" class="btn btn-success ml-auto mr-3">Add book</a>
	</div>
	<% books.forEach((book) => { %>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-header text-center">
					<div class="row">
						<div class="col">
							<h4>Title</h4>
						</div>
						<div class="col">
							<h4>Author</h4>
						</div>
						<div class="col">
							<h4>Category</h4>
						</div>
						<div class="col"></div>
					</div>
				</div>
				<div class="card-body text-center">
					<div class="row">
						<div class="col">
							<p><%= book.title %></p>
						</div>
						<div class="col">
							<p><%= book.author %></p>
						</div>
						<div class="col">
							<p><%= book.category %></p>
						</div>
						<div class="col">
							<button class="btn btn-primary">edit</button>
							<button class="btn btn-danger">Delete</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<% }); %>
</div>

<%- include("partials/footer") -%>
